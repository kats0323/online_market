<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Images</th>
      <th>State</th>
      <th>Postage</th>
      <th>Region</th>
      <th>Shipping date</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        
        <td><%= image_tag item.images.attachments.first %></td>
        <td><%= item.state %></td>
        <td><%= item.postage %></td>
        <td><%= item.region %></td>
        <td><%= item.shipping_date %></td>
        <td><%= item.price %></td>
       <td> <% if current_user && current_user.profile %>
      <%= link_to 'buy', buyer_page_path(item_id: item.id, seller_id: item.seller_id), class: "btn btn-primary"%>
    <% end %></td>
          <td><%= link_to 'Detail', item %></td>
          <% if current_user == current_user.id%>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end  %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

